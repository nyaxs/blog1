<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="nyaxs.blog.mapper.LogsMapper">
    	<insert id="addLog" parameterType="Logs" >
            insert into logs ( log_date, log_type, log_content ) values (#{log_date},#{log_type},#{log_content})   
        </insert>
        
        <delete id="deleteLogById" parameterType="Logs" >
            delete from logs where id = #{id}  
        </delete>
        
        <delete id="deleteLogByType" parameterType="Logs" >
            delete from logs where log_type = #{log_type}  
        </delete>
        
        <!-- May be wrong... -->
        <select id="getLogByDate" parameterType="java.util.Date" resultType="Logs">
            select * from logs where log_date &gt; #{date} AND log_date &lt; #{date2}
        </select>
    </mapper>
        